                <li class="product-item">
                    <div class="product-img">
                        <img src="/files/Products/20231014200818645_xiaomi-13t.png" alt="">
                    </div>
                    <div class="product-desc">
                        <p class="product-name">Xiaomi 13T</p>
                        <div class="d-flex justify-content-between">
                            <div class="product-info">
                                Phân loại: Đen, 4GB/512GB
                            </div>
                            <div class="product-cost">
                                <p class="product-quantity">x3</p>
                                <p class="product-price">7.000.000<sup>đ</sup></p>
                            </div>
                        </div>
                    </div>
                </li>
                <hr class="m-0">
            </ul>
            <div class="order-footer">
                <div class="order-total-cost">
                    Thành tiền: <span class="fw-semibold primary-text">100.000.000<sup>đ</sup></span>
                </div>
                <div class="order-action">
                    <button class="btn primary-bg text-white">Hủy đơn hàng</button>
                </div>
            </div>
        </li>
    </ul>

