    {
    
    <link href="~/lib/summernote/summernote-bs5.min.css" rel="stylesheet" />
    <script src="~/lib/summernote/summernote.min.js"></script>

    <script>
        $(document).ready(function() {
            $("#Description").summernote({
                minHeight: 600
            });
        });
    </script>

    <script>
        // Thêm ram rom sl cho màu
