                                            </div>
                                        </div>
                                    `;

                $("#color-container").append(html);
            });
        })

        // Xử lý ảnh upload cho color
        const changeColorImg = function (element) {
            const btnChooseImg = $(element).siblings(".btn-choose-img");
            const imgShowContainer = $(element).siblings(".color-img-show-container");
            const imgShow = imgShowContainer.children(".color-img-show");

            imgShow.attr("src", URL.createObjectURL(element.files[0]));
            btnChooseImg.hide();
            imgShowContainer.show();
        }

        const removeColorImg = function (element) {
            const btnChooseImg = $(element).closest(".color-img-show-container").siblings(".btn-choose-img");
            const inputImg = $(element).closest(".color-img-show-container").siblings(".color-input-img");
            const imgShowContainer = $(element).closest(".color-img-show-container");
            const imgShow = imgShowContainer.children(".color-img-show");

            btnChooseImg.show();
            imgShow.attr("src", "");
            inputImg.val("");
            imgShowContainer.hide();
        }

        // Xử lý up ảnh chính cho sản phẩm
        const changeMainImg = function (element) {
            const btnChooseImg = $(element).siblings("#main-img-btn-choose");
            const imgShowContainer = $(element).siblings(".main-img-show");
            const imgShow = imgShowContainer.children("#main-img");

            imgShow.attr("src", URL.createObjectURL(element.files[0]));
            btnChooseImg.hide();
            imgShowContainer.show();
        }

        const removeMainImg = function (element) {
            const btnChooseImg = $(element).closest(".main-img-show").siblings("#main-img-btn-choose");
            const imgShowContainer = $(element).closest(".main-img-show");
            const imgShow = $(element).closest("#main-img");
            const inputImg = $(element).closest(".main-img-show").closest(".main-img-input");

            btnChooseImg.show();
            imgShow.attr("src", "");
            inputImg.val("");
            imgShowContainer.hide();
        }

        // Xử lý up dảnh phụ cho sản phẩm
        const changeSubImg = function (element) {
            const btnChooseImg = $(element).siblings(".btn-choose-sub-img");
            const imgShowContainer = $(element).siblings(".sub-img-show");
            const imgShow = imgShowContainer.children(".sub-img");

            imgShow.attr("src", URL.createObjectURL(element.files[0]));
            btnChooseImg.hide();
            imgShowContainer.show();

            addSubImgSection();
        }

        const removeSubImg = function (element) {
            
            if ($(".sub-img-item").length > 1)
            {
                $(element).closest(".sub-img-item").remove();
                return;
            }

            const imgShowContainer = $(element).closest(".sub-img-show");
            const btnChooseImg = imgShowContainer.siblings(".btn-choose-sub-img");
            const imgShow = $(element).siblings(".sub-img");
            const inputImg = imgShowContainer.siblings(".sub-input");

            btnChooseImg.show();
            imgShow.attr("src", "");
            inputImg.val("");
            imgShowContainer.hide();
        }

        const addSubImgSection = function () {
            const Id = $(".sub-img-item").last().data("id") + 1;
            const html = `
                    <div class="sub-img-item mb-3" data-id="${Id}">
                        <label class="btn btn-primary btn-sm btn-choose-sub-img" for="SubImage_${Id}__FileUpload">Thêm ảnh</label>
                        <input type="hidden" name="SubImage.Index" value="${Id}">
                        <input hidden class="sub-input" oninput="changeSubImg(this)" type="file" id="SubImage_${Id}__FileUpload" name="SubImage[${Id}].FileUpload">
                        <div class="sub-img-show w-50 position-relative" style="display: none;">
                            <img class="sub-img w-100" style="object-fit: contain; height: 300px;">
                            <span class="btn btn-danger btn-sm position-absolute top-0 end-0 mt-1 me-1" onclick="removeSubImg(this)">
                                <i class="fa-solid fa-xmark"></i>
                            </span>
                        </div>
                    </div>
                `;
            $(".sub-img-container").append(html);
        }

    </script>
    

    <partial name="_MultipleSelect" model="@("CategoryId")"></partial>
    <partial name="_ValidationScriptsPartial" />
}
