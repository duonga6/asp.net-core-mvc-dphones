@model CreateProductModel
@{
    ViewData["Title"] = "Chính sửa sản phẩm";
    var mainPhoto = Model.Photos?.Where(p => p.Id == Model.MainPhoto).FirstOrDefault();
    var subPhoto = Model.Photos?.Where(p => p.Id != Model.MainPhoto).ToList();
    @* Layout = "/Views/Shared/_Layout.cshtml"; *@
}

<div class="card">
    <div class="card-header">
        @ViewData["Title"]
    </div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group mb-2">
                        <label asp-for="Code" class="form-label"></label>
                        <input asp-for="Code" class="form-control">
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="w-100"></select>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="BrandId" class="form-label"></label>
                        <select asp-for="BrandId" asp-items="@ViewBag.Brands" class="w-100 form-select"></select>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Slug" class="form-label"></label>
                        <input asp-for="Slug" class="form-control">
                        <span asp-validation-for="Slug" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-2">
                        <label asp-for="Battery" class="form-label"></label>
                        <input asp-for="Battery" class="form-control">
                        <span asp-validation-for="Battery" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="OS" class="form-label"></label>
                        <input asp-for="OS" class="form-control">
                        <span asp-validation-for="OS" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Chipset" class="form-label"></label>
                        <input asp-for="Chipset" class="form-control">
                        <span asp-validation-for="Chipset" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ScreenSize" class="form-label"></label>
                        <input asp-for="ScreenSize" class="form-control">
                        <span asp-validation-for="ScreenSize" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Charger" class="form-label"></label>
                        <input asp-for="Charger" class="form-control">
                        <span asp-validation-for="Charger" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="EntryDate" class="form-label"></label>
                        <input asp-for="EntryDate" class="form-control" type="date">
                        <span asp-validation-for="EntryDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ReleaseDate" class="form-label"></label>
                        <input asp-for="ReleaseDate" class="form-control" type="date">
                        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-2">
                        <label asp-for="SIM" class="form-label"></label>
                        <textarea asp-for="SIM" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="SIM" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Camera" class="form-label"></label>
                        <textarea asp-for="Camera" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Camera" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4">
                        <input asp-for="Published" class="form-check-input" checked>
                        <label asp-for="Published" class="form-check-label"></label>
                        <span asp-validation-for="Published" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @* Photo *@
            <div class="product-add-photo d-flex flex-column mt-4">
                <div class="row product-photo-container">
                    <div class="main-photo-container col-md-4">
                        <div class="main-photo-input-container">
                            <span class="form-label">Hình ảnh hiển thị</span>
                            <br>
                            <div id="btn-add-main-photo" @if (mainPhoto != null)
                            {
                                <text>style="display: none"</text>
                            }>
                                <label for="main-photo-input" class="btn btn-success mt-2" id="main-photo-btn">Upload
                                    <i class="fa-solid fa-plus"></i></label>
                                <input type="file" name="newPrimaryPhoto.FileUpload" id="main-photo-input" hidden
                                    oninput="changeMainPhoto(this)">
                            </div>
                        </div>
                        <div class="show-main-photo mt-4 position-relative" @if (mainPhoto == null)
                        {
                            <text>
                                style="display:none"</text>
                        }>
                            <img src="/files/Products/@mainPhoto?.Name" id="main-photo-img">
                            <span data-id="@mainPhoto?.Id"
                                class="btn btn-danger position-absolute top-0 end-0 mt-1 me-1"
                                onclick="deleteMainPhoto(@mainPhoto?.Id)">
                                <i class="fa-solid fa-xmark"></i>
                            </span>
                        </div>
                    </div>
                    <div class="sub-photo-container col-md-8">
                        <div class="sub-photo-input-container">
                            <span class="form-label">Hình ảnh khác</span>
                            <br>
                            <div id="btn-add-sub-photo">
                                <label for="sub-photo-input-0" class="btn btn-success mt-2" id="sub-photo-btn">Upload <i
                                        class="fa-solid fa-plus"></i></label>
                                <input type="hidden" name="newSubPhoto.Index" value="0">
                                <input type="file" name="newSubPhoto[0].FileUpload" id="sub-photo-input-0" hidden
                                    data-id="0" oninput="changeSubPhoto(this)">
                            </div>
                        </div>
                        <ul class="show-sub-photo row">
                            @if (subPhoto != null)
                            {
                                foreach (var item in subPhoto)
                                {
                                    <li class="sub-photo-item col-md-4 mb-2 position-relative">
                                        <img src="/files/Products/@item.Name" id="sub-photo-img">
                                        <span data-id="@item.Id" class="btn btn-danger position-absolute top-0 end-0 mt-1 me-3"
                                            onclick="chadeleteSubPhoto(this, @item.Id)">
                                            <i class="fa-solid fa-xmark"></i>
                                        </span>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="data-product-img" hidden>
                        <div class="main">
                            @if (mainPhoto != null)
                            {
                                <input id="currentMainPhoto" type="text" name="currentMainPhoto" value="@mainPhoto.Id">
                            }
                        </div>
                        <div class="sub">
                            @if (subPhoto != null)
                            {
                                foreach (var item in subPhoto)
                                {
                                    <input class="currentSubPhoto" type="text" name="currentSubPhoto" value="@item.Id">
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>

            @* Color *@
            <div class="row">
                <div class="col-md">
                    <div class="form-group mb-2" id="color-container">
                        <p>
                            Màu sắc
                            <span class="btn btn-primary btn-sm ms-2" onclick="addColor(this)">
                                <i class="fa-solid fa-plus"></i>
                            </span>
                        </p>
                        @if (Model.Colors != null)
                        {
                            int index = 0;
                            foreach (var item in Model.Colors)
                            {
                                <div class="card color-group mb-3" data-id="@index">
                                    <div class="card-header position-relative">
                                        @if(index > 0)
                                        {
                                            <span class="btn btn-danger btn-sm position-absolute top-0 end-0 me-1 mt-1" onclick="deleteColor(this, @index)">
                                                <i class="fa-solid fa-xmark"></i>
                                            </span>
                                        }
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="row">
                                                    <input type="hidden" name="colorList.Index" value="@index">
                                                    <input type="hidden" name="colorList[@index].Id" value="@item.Id">
                                                    <div class="col-md-6">
                                                        <label for="colorList[@index].Name" class="form-label">Tên màu</label>
                                                        <input id="colorList[@index].Name" name="colorList[@index].Name"
                                                            value="@item.Name" class="form-control">
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label for="colorList[@index].Code" class="form-label">Mã màu</label>
                                                        <input id="colorList[@index].Code" name="colorList[@index].Code"
                                                            value="@item.Code" class="form-control form-control-color"
                                                            type="color">
                                                    </div>
                                                </div>
                                                <div class="color-image mt-2">
                                                    <input type="hidden" name="colorList[@index].Image" value="@item.Image">
                                                    <label for="colorList[@index].ImageFile"
                                                        class="btn btn-success btn-sm btn-choose-img"
                                                        @if(item.Image != null)
                                                        {
                                                            <text>style="display: none;"</text>
                                                        }
                                                        >Thêm ảnh</label>
                                                    <input type="file" id="colorList[@index].ImageFile"
                                                        name="colorList[@index].ImageFile" class="color-input-img" hidden
                                                        accept=".png, .jpg, .jpeg, .webp" oninput="changeColorImg(this)">
                                                    <div class="color-img-show-container w-75 position-relative"
                                                        @if(item.Image == null)
                                                        {
                                                            <text>style="display: none;"</text>
                                                        }
                                                        >
                                                        <img class="color-img-show w-100 mt-2"  
                                                            style="object-fit: contain;"
                                                            @if(item.Image != null)
                                                            {
                                                                <text>src="/files/Products/@item.Image"</text>
                                                            }
                                                        >
                                                        <span
                                                            class="btn btn-danger btn-sm position-absolute top-0 end-0 mt-1 me-1"
                                                            onclick="removeColorImg(this)">
                                                            <i class="fa-solid fa-xmark"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-8">
                                                <div class="option-group">
                                                    <div>
                                                        Options
                                                        <span class="btn btn-primary btn-sm ms-2" id="add-options"
                                                            onclick="addOption(this)" data-id="@index">
                                                            <i class="fa-solid fa-plus"></i>
                                                        </span>
                                                    </div>
                                                    @if (item.Capacities != null)
                                                    {
                                                        int opIndex = 0;
                                                        foreach (var op in item.Capacities)
                                                        {
                                                            <div class="row option-item" data-id="@opIndex">
                                                                <input type="hidden" name="colorList[@index].Capacities.Index" value="@opIndex">
                                                                <input type="hidden" name="colorList[@index].Capacities[@opIndex].Id" value="@op.Id">
                                                                <div class="col-md-2">
                                                                    <label for="colorList[@index].Capacities[@opIndex].Ram"
                                                                        class="form-label">Ram</label>
                                                                    <input required id="colorList[@index].Capacities[@opIndex].Ram"
                                                                        name="colorList[@index].Capacities[@opIndex].Ram"
                                                                        value="@op.Ram" class="form-control">
                                                                </div>
                                                                <div class="col-md-2">
                                                                    <label for="colorList[@index].Capacities[@opIndex].Rom"
                                                                        class="form-label">Rom</label>
                                                                    <input required id="colorList[@index].Capacities[@opIndex].Rom"
                                                                        name="colorList[@index].Capacities[@opIndex].Rom"
                                                                        value="@op.Rom" class="form-control">
                                                                </div>
                                                                <div class="col-md-2">
                                                                    <label for="colorList[@index].Capacities[@opIndex].Quantity"
                                                                        class="form-label">Số lượng</label>
                                                                    <input required id="colorList[@index].Capacities[@opIndex].Quantity"
                                                                        name="colorList[@index].Capacities[@opIndex].Quantity"
                                                                        value="@op.Quantity" class="form-control">
                                                                </div>
                                                                <div class="col-md-2">
                                                                    <label for="colorList[@index].Capacities[@opIndex].EntryPrice"
                                                                        class="form-label">Giá nhập vào</label>
                                                                    <input required id="colorList[@index].Capacities[@opIndex].EntryPrice"
                                                                        name="colorList[@index].Capacities[@opIndex].EntryPrice"
                                                                        value="@op.EntryPrice.ToString("#")" class="form-control">
                                                                </div>
                                                                <div class="col-md-2">
                                                                    <label for="colorList[@index].Capacities[@opIndex].SellPrice"
                                                                        class="form-label">Giá bán ra</label>
                                                                    <input required id="colorList[@index].Capacities[@opIndex].SellPrice"
                                                                        name="colorList[@index].Capacities[@opIndex].SellPrice"
                                                                        value="@op.SellPrice.ToString("#")" class="form-control">
                                                                </div>
                                                                <div class="col-md-2 mb-1 mt-auto">
                                                                    @if(opIndex > 0)
                                                                    {
                                                                        <span class="btn btn-danger btn-sm" id="delete-option" onclick="deleteOption(this)">
                                                                            <i class="fa-solid fa-minus"></i>
                                                                        </span>
                                                                    }
                                                                </div>
                                                            </div>
                                                            opIndex++;
                                                        }
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                index++;
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md form-group mb-2">
                    <label class="form-label">Mô tả</label>
                    <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                </div>
            </div>

            <div class="form-group mt-4">
                <button class="btn btn-success" type="submit">Lưu lại</button>
            </div>
        </form>
    </div>
</div>


@section Scripts
    {
    <script src="~/lib/summernote/summernote-lite.min.js"></script>
    <link href="~/lib/summernote/summernote-lite.min.css" rel="stylesheet">

    <script>
        $(document).ready(function() {
            $('#Description').summernote({
                minHeight: 600
            });
        });
    </script>

    <script>
        const btnAddMainPhoto = $("#btn-add-main-photo");
        const showMainPhoto = $(".show-main-photo");
        const mainImg = $("#main-photo-img");
        const inputMainPhoto = $("#main-photo-input");

        const showSubPhoto = $(".show-sub-photo");
        const btnAddSubPhoto = $("#btn-add-sub-photo");

        const deleteMainPhoto = function (id = null) {
            $(".data-product-img .main #currentMainPhoto").remove();
            btnAddMainPhoto.show();
            showMainPhoto.hide();
            inputMainPhoto.val("");
        }

        const changeMainPhoto = function (element) {
            mainImg.attr("src", URL.createObjectURL(element.files[0]));
            showMainPhoto.show();
            btnAddMainPhoto.hide();
        }

        const chadeleteSubPhoto = function (element, id) {
            $(".data-product-img .sub .currentSubPhoto").each((index, e) => {
                if ($(e).val() == id)
                    $(e).remove();
            });

            $(element).closest(".sub-photo-item").remove();
        }

        const changeSubPhoto = function (element) {
            // show ảnh
            const lastIndexInput = btnAddSubPhoto.children("input[type='file']").last().data("id");
            const showImgHtml = `
                            <li class="sub-photo-item col-md-4 mb-2 position-relative" data-id="${lastIndexInput}">
                                <img src="${URL.createObjectURL(element.files[0])}" id="sub-photo-img">
                                <span class="btn btn-danger position-absolute top-0 end-0 mt-1 me-3" onclick="deleteNewSubPhoto(this)">
                                    <i class="fa-solid fa-xmark"></i>
                                </span>
                            </li>
                        `;
            showSubPhoto.append(showImgHtml);


            // thêm phần tử input cho subphoto
            const nexIndexInput = lastIndexInput + 1;
            const inputElement = `
                            <input type="hidden" name="newSubPhoto.Index" value="${nexIndexInput}">
                            <input type="file" name="newSubPhoto[${nexIndexInput}].FileUpload" id="sub-photo-input-${nexIndexInput}" data-id="${nexIndexInput}" hidden oninput="changeSubPhoto(this)">
                        `;
            btnAddSubPhoto.append(inputElement);
            btnAddSubPhoto.children("#sub-photo-btn").attr("for", `sub-photo-input-${nexIndexInput}`);
        }

        const deleteNewSubPhoto = function (element) {
            const currentItemShow = $(element).closest(".sub-photo-item");
            const indexItem = currentItemShow.data("id");
            // xóa ảnh show
            showSubPhoto.children(".sub-photo-item").each((index, e) => {
                if ($(e).data("id") == indexItem) {
                    $(e).remove();
                }
            });

            // xóa thẻ input có ảnh bị xóa
            btnAddSubPhoto.children("input[type='file']").each((index, e) => {
                if ($(e).data("id") == indexItem) {
                    $(e).remove();
                }
            })
        }

        // Xử lý Color
        // - Thêm ảnh cho color
        const changeColorImg = function (element) {
            const showImgContainer = $(element).siblings(".color-img-show-container");
            const imgShow = showImgContainer.children(".color-img-show");
            const btnChooseImg = $(element).siblings(".btn-choose-img");

            imgShow.attr("src", URL.createObjectURL(element.files[0]));
            btnChooseImg.hide();
            showImgContainer.show();
        }
        // - Xóa ảnh color
        const removeColorImg = function(element) {
            const showImgContainer = $(element).closest(".color-img-show-container");
            const btnChooseImg = showImgContainer.siblings(".btn-choose-img");
            const inputImg = showImgContainer.siblings("input[type='file']");

            btnChooseImg.show();
            showImgContainer.hide();
            inputImg.val("");

            $(element).closest(".color-image").children("input[type='hidden']").val("");
        }

        // -Thêm option
        const addOption = function(element) {
            const nextIndex = $(element).closest(".option-group").children(".option-item").last().data("id") + 1;
            const colorIndex = $(element).data("id");
            const optionHtml = `
                <div class="row option-item" data-id="${nextIndex}">
                    <input type="hidden" name="colorList[${colorIndex}].Capacities.Index" value="${nextIndex}">
                    <input type="hidden" name="colorList[${colorIndex}].Capacities[${nextIndex}].Id" value="-1">
                    <div class="col-md-2">
                        <label for="colorList[${colorIndex}].Capacities[${nextIndex}].Ram"
                            class="form-label">Ram</label>
                        <input required id="colorList[${colorIndex}].Capacities[${nextIndex}].Ram"
                            name="colorList[${colorIndex}].Capacities[${nextIndex}].Ram"
                            class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label for="colorList[${colorIndex}].Capacities[${nextIndex}].Rom"
                            class="form-label">Rom</label>
                        <input required id="colorList[${colorIndex}].Capacities[${nextIndex}].Rom"
                            name="colorList[${colorIndex}].Capacities[${nextIndex}].Rom"
                            class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label for="colorList[${colorIndex}].Capacities[${nextIndex}].Quantity"
                            class="form-label">Số lượng</label>
                        <input required id="colorList[${colorIndex}].Capacities[${nextIndex}].Quantity"
                            name="colorList[${colorIndex}].Capacities[${nextIndex}].Quantity"
                            class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label for="colorList[${colorIndex}].Capacities[${nextIndex}].EntryPrice"
                            class="form-label">Giá nhập vào</label>
                        <input required id="colorList[${colorIndex}].Capacities[${nextIndex}].EntryPrice"
                            name="colorList[${colorIndex}].Capacities[${nextIndex}].EntryPrice"
                            class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label for="colorList[${colorIndex}].Capacities[${nextIndex}].SellPrice"
                            class="form-label">Giá bán ra</label>
                        <input required id="colorList[${colorIndex}].Capacities[${nextIndex}].SellPrice"
                            name="colorList[${colorIndex}].Capacities[${nextIndex}].SellPrice"
                            class="form-control">
                    </div>
                    <div class="col-md-2 mb-1 mt-auto">
                        <span class="btn btn-danger btn-sm" id="delete-option" onclick="deleteOption(this)" data-id="${nextIndex}">
                            <i class="fa-solid fa-minus"></i>
                        </span>
                    </div>
                </div>
            `;
            $(element).closest(".option-group").append(optionHtml);
        }

        // -Xóa option
        const deleteOption = function(element) {
            $(element).closest(".option-item").remove();
        }

        // -Thêm color
        const addColor = function(element)
        {
            let nextIndex = $("#color-container .color-group").last().data("id") + 1;
            if (isNaN(nextIndex))   nextIndex = 0;
            const colorHtml = `
                <div class="card color-group mb-3" data-id="${nextIndex}">
                    <div class="card-header position-relative">
                        <span class="btn btn-danger btn-sm position-absolute top-0 end-0 me-1 mt-1" onclick="deleteColor(this)">
                            <i class="fa-solid fa-xmark"></i>
                        </span>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="row">
                                    <input type="hidden" name="colorList.Index" value="${nextIndex}">
                                    <input type="hidden" name="colorList[${nextIndex}].Id" value="-1">
                                    <div class="col-md-6">
                                        <label for="colorList[${nextIndex}].Name" class="form-label">Tên màu</label>
                                        <input id="colorList[${nextIndex}].Name" name="colorList[${nextIndex}].Name"
                                            value="" class="form-control">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="colorList[${nextIndex}].Code" class="form-label">Mã màu</label>
                                        <input id="colorList[${nextIndex}].Code" name="colorList[${nextIndex}].Code"
                                            value="" class="form-control form-control-color"
                                            type="color">
                                    </div>
                                </div>
                                <div class="color-image mt-2">
                                    <input type="hidden" name="colorList[${nextIndex}].Image" value="">
                                    <label for="colorList[${nextIndex}].ImageFile"
                                        class="btn btn-success btn-sm btn-choose-img"
                                        >Thêm ảnh</label>
                                    <input type="file" id="colorList[${nextIndex}].ImageFile"
                                        name="colorList[${nextIndex}].ImageFile" class="color-input-img" hidden
                                        accept=".png, .jpg, .jpeg, .webp" oninput="changeColorImg(this)">
                                    <div class="color-img-show-container w-75 position-relative"
                                        style="display: none;"
                                        >
                                        <img class="color-img-show w-100 mt-2"  
                                            style="object-fit: contain;">
                                        <span
                                            class="btn btn-danger btn-sm position-absolute top-0 end-0 mt-1 me-1"
                                            onclick="removeColorImg(this)">
                                            <i class="fa-solid fa-xmark"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-8">
                                <div class="option-group">
                                    <div>
                                        Options
                                        <span class="btn btn-primary btn-sm ms-2" id="add-options"
                                            onclick="addOption(this)" data-id="${nextIndex}">
                                            <i class="fa-solid fa-plus"></i>
                                        </span>
                                    </div>
                                    <div class="row option-item" data-id="0">
                                        <input type="hidden" name="colorList[${nextIndex}].Capacities.Index" value="0">
                                        <input type="hidden" name="colorList[${nextIndex}].Capacities[0].Id" value="-1">
                                        <div class="col-md-2">
                                            <label for="colorList[${nextIndex}].Capacities[0].Ram"
                                                class="form-label">Ram</label>
                                            <input required id="colorList[${nextIndex}].Capacities[0].Ram"
                                                name="colorList[${nextIndex}].Capacities[0].Ram"
                                                value="" class="form-control">
                                        </div>
                                        <div class="col-md-2">
