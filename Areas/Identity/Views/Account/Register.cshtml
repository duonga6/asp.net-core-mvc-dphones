@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> _signManager
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h4 class="text-center text-dark fw-semibold">Đăng ký</h4>
        <img src="~/images/logo-color.png" style="width: 100%; height: 100px; object-fit: cover;">
        <form id="registerForm" asp-action="Register" asp-controller="Account" asp-area="Identity"
            asp-route-returnUrl="@ViewData["returnUrl"]" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" />
                <label class="primary-text opacity-100" asp-for="UserName"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="FullName" class="form-control" autocomplete="firstname" aria-required="true" />
                <label class="primary-text opacity-100" asp-for="FullName"></label>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" />
                <label class="primary-text opacity-100" asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" autocomplete="password" aria-required="true" />
                <label class="primary-text opacity-100" asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="confirm-password"
                    aria-required="true" />
                <label class="primary-text opacity-100" asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn primary-bg text-white">Đăng ký</button>
        </form>
        <p class="mt-3">
            Đã có tài khoản ?
            <a class="primary-text text-decoration-none" asp-action="Login" asp-controller="Account"
                asp-area="Identity" asp-route-returnUrl="@ViewData["returnUrl"]">Đăng nhập</a>
        </p>
    </div>

